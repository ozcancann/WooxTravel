@model WooxTravel.Entities.Admin
@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow p-4" style="max-width: 500px; width: 100%; border-radius: 30px;">
        <div class="caption-top">
            <div class="text-center mb-12">
                <i class="fas fa-user-edit fa-3x text-success"></i>
                <br /><br />
                <h3 class="alert alert-success h6"><strong>Yeni Kullanıcı Ekleme Sayfası</strong></h3>
            </div>

            <form method="post">
                <div class="form-group mb-3">
                    <label for="name" class="form-label"><strong>Ad</strong></label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @id = "name", @placeholder = "Ad girin" })
                </div>

                <div class="form-group mb-3">
                    <label for="surname" class="form-label"><strong>Soyad</strong></label>
                    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control", @id = "surname", @placeholder = "Soyad girin" })
                </div>

                <div class="form-group mb-3">
                    <label for="email" class="form-label"><strong>E-Mail</strong></label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @id = "email", @placeholder = "E-Mail girin" })
                </div>

                <div class="form-group mb-3">
                    <label for="username" class="form-label"><strong>Kullanıcı Adı</strong></label>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @id = "username", @placeholder = "Kullanıcı Adı girin" })
                </div>

                <div class="form-group mb-4">
                    <label for="password" class="form-label"><strong>Şifre</strong></label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", @id = "password", @placeholder = "Şifre girin" })
                </div>
                <br />
                <button type="submit" class="btn btn-outline-success w-100" style="border-radius:30px">
                    <strong>Kullanıcıyı Kaydet</strong>
                </button>
            </form>
        </div>
    </div>
</div>

