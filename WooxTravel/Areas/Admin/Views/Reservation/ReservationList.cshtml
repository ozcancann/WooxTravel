@model List<WooxTravel.Entities.Reservation>

@{
    ViewBag.Title = "ReservationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


div class="container">
<div class="page-inner">
    <div class="page-header">
        <h3 class="fw-bold mb-3">Tablolar</h3>
        <ul class="breadcrumbs mb-3">
            <li class="nav-home">
                <a href="#">
                    <i class="icon-home"></i>
                </a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Tablolar</a>
            </li>
            <li class="separator">
                <i class="icon-arrow-right"></i>
            </li>
            <li class="nav-item">
                <a href="#">Temel Tablolar</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-gray2">
                    <div class="alert alert-info h4">Rezervasyon İşlemleri</div>
                </div>
                <div class="card-body">

                    <table class="table mt-1">
                        <thead>
                            <tr>
                                <th scope="col">Rezervasyon Numarası</th>
                                <th scope="col">Müşteri Adı</th>
                                <th scope="col">Müşteri Telefonu</th>
                                <th scope="col">Müşteri Sayısı</th>
                                <th scope="col">Rezervasyon Tarihi</th>
                                <th scope="col">Sil</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td>@item.Phone</td>
                                    <td>@item.PersonCount</td>
                                    <td>@item.ReservationDate</td>
                                    <td><a href="/Admin/Reservation/DeleteReservation/@item.ReservationId" class="btn btn-label-danger" style="border-radius:30px">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Reservation/CreateReservation" class="btn btn-label-success" style="border-radius:30px">Yeni Rezervasyon Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

