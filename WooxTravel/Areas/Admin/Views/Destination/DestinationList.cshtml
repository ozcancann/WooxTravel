@model List<WooxTravel.Entities.Destination>

@{
    ViewBag.Title = "DestinationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Tablolar</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Tablolar</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Temel Tablolar</a>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-gray2">
                        <div class="alert alert-info h4">Destinasyon İşlemleri</div>
                    </div>
                    <div class="card-body">

                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">Destinasyon Numarası</th>
                                    <th scope="col">Ülke</th>
                                    <th scope="col">Şehir</th>
                                    <th scope="col">Gün/Gece</th>
                                    <th scope="col">Fiyat</th>
                                    <th scope="col">Kapasite</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Düzenle</th>
                                    <th scope="col">Sitede Gör</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Country</td>
                                        <td>@item.City</td>
                                        <td>@item.DayNight</td>
                                        <td>@item.Price ₺</td>
                                        <td>@item.Capacity Kişi</td>
                                        <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-label-danger" style="border-radius:30px">Sil</a></td>
                                        <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-label-success" style="border-radius:30px">Düzenle</a></td>
                                        <td><a href="#" class="btn btn-label-warning" style="border-radius:30px">Sitede Gör</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Destination/CreateDestination/" class="btn btn-label-success" style="border-radius:30px">Yeni Destinasyon Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>