
@{
    ViewBag.Title = "Stats";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Tablolar</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Tablolar</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Temel Tablolar</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-gray2">
                        <div class="alert alert-info h4" 1>İstatistikler</div>
                    </div>
                    <div class="card-body">

                        <div class="alert btn-label-secondary">Toplam Kapasite Sayısı: @ViewBag.Capacity</div>
                        <div class="alert btn-label-success">Okunmuş Mesaj Sayısı: @ViewBag.messageIsReadTrueCount</div>
                        <div class="alert btn-label-info">Okunmamış Mesaj Sayısı: @ViewBag.messageIsReadFalseCount</div>
                        <div class="alert btn-label-danger">Toplam Mesaj Sayısı: @ViewBag.totalMessageCount</div>
                        <div class="alert btn-label-warning">Toplam Destinasyon Sayısı: @ViewBag.destinationCount</div>
                        <div class="alert btn-label-secondary">En Yüksek Fiyatlı Destinasyonun Adı: @ViewBag.maxPrice</div>
                        <div class="alert btn-label-success">En Yüksek Fiyatlı Destinasyonun Fiyatı: @ViewBag.maxPriceName</div>
                        <div class="alert btn-label-info">Ortalama Destinasyon Fiyatı: @ViewBag.destinationPriceAvg</div>
                        <div class="alert btn-label-danger">Fiyatı 22.500₺ Olan Destinasyon: @ViewBag.priceUp22500</div>
                        <div class="alert btn-label-warning">En Düşük Fiyatlı Destinasyon: @ViewBag.minPrice</div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


